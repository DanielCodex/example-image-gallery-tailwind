{
  "compilerOptions": {
    // add this from book
    "typeRoots": [
      "@types",
      "node_modules/@types"
    ],
    "target": "ES2020",
    "module": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    // we don't want any in our code ðŸ˜  
    "noImplicitAny": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src",
    "src/playground" // for playing with TS/
  ],
}
